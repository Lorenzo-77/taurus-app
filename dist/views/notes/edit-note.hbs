<main class="container p-5">
<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
           <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
               <input type="hidden" name="_method" value="PUT">
               <div class="input-group mb-3">
                   <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{note.title}}">
               </div>

               <div class="input-group mb-3">
                <input type="url" name="image" class="form-control" placeholder="http://website.com" value="{{note.image}}">
                </div>
                <div class="input-group mb-3">
                  <textarea name="description" class="form-control" placeholder="Description" rows="6">{{note.description}}</textarea>
               </div>

                <div class="input-group mb-3">
            Color de texto: <input type="color" name="color" class="form-control" value="{{note.color}}" >
             </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-block" type="submit">
                       Guardar
                   </button>
               </div>
           </form>
        </div>
    </div>
</div></main>