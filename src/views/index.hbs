<main class="container p-5">
<div class="row">

  {{#each notes}}
    <div class="col-md-4 mb-2">
  
      <div class="card bg-secondary border-primary" >
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{title}}
            <a href="/wod/edit/{{_id}}"><i
                class="fa fa-refresh fa-spin"
                style="font-size:24px"
              ></i></a>
          </h4> 

        <div class="contenedor">
          <img  class="d-block user-select-none" width="300" height="200" src="{{image}}">
          <div class="texto-encima text-center">
            <h6>{{description}}</h6>

          </div>
         </div>

          <!--Eliminar-->
 
          <form class="modal-footer" action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE" />

            <a href="/about/{{_id}}" class="btn btn-primary btn-sm" target="_blank">Ver</a>
            
            <button class="btn btn-danger btn-block btn-sm" type="submit">
              Eliminar
            </button>
          </form>

        </div>
      </div>
    </div>

  {{else}}
    <!--Crear nueva nota-->
    <div class="col-md-4 mx-auto ">
      <div class="card mx-auto text-center">
        <div class="card-body">
          <p class="lead">No hay Rutinas aun</p>
          <a href="/wod/add" class="btn btn-success btn-block">Crear WOD</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
</main>